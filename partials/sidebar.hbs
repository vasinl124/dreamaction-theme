<div class='recent-posts-container'>
  <h4>Recent Posts</h4>
  {{#get "posts" limit="10"}}
    {{! Loop through our posts collection }}
    {{#foreach posts}}
      <a href="{{url}}">
        <p><span class='fa fa-arrow-circle-o-right'></span> {{title}}</p>
      </a>
        
    {{/foreach}}
  {{/get}}
</div>

<div class='featured-posts-container'>
    <h4>Featured Posts</h4>
    {{#get "posts" filter="featured:true" limit="2"}}
      {{! Loop through our posts collection }}
      {{#foreach posts}}
        {{#if featured}}
        <div class='featured-post'>
        <a href="{{url}}">
          <img class='img img-responsive' src="{{image}}" alt="{{title}}">
          <p><span class='featured fa fa-star'></span> {{title}}</p>
        </a>
        </div>
        {{/if}}
      {{/foreach}}
    {{/get}}
</div>

<div class='tags-side-container'>
  <h4>Tags</h4>
  {{#get "tags"}}
    {{#foreach tags}}
        <a href='{{url}}' title="{{name}}">
          {{name}} 
        </a>
    {{/foreach}}
  {{/get}}  
</div>
