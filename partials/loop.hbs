{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<div class='row main-post {{post_class}}'>
  <div class='col col-md-12 post-container' style='background-image: url({{image}});'>
    <div class='title'>
      <a href="{{url}}">
        <h2>
          {{title}}
        </h2>
      </a>
      <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}"><p><span class='fa fa-calendar'></span> &nbsp&nbsp{{date format="MMMM D, YYYY"}}</p></time>
    </div>

    {{#author}}
      <div class='author'>
        <a href="{{url}}">
          {{#if image}}
            <img class='img-circle' src="{{image}}" alt="">
          {{/if}}
          <span>{{name}}</span>  
        </a>
      </div>
    {{/author}}  
    <div class='tags text-right'>
      <p>{{tags}}</p>
    </div>
  </div>

  <div class=' col col-md-12'>
    <div class='row excerpt text-center'>
      <div class='col col-xs-12'>
        <span class='fa fa-quote-left'></span> 
        <p>{{excerpt}}</p>
      </div>
      <div class='col col-xs-12 text-center readmore'>
        <a href="{{url}}">  
          <h4>READ MORE</h4>
        </a>    
      </div>
    </div>
  </div>  
</div>

{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}
