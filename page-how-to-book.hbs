<link type="text/css" href="{{asset "css/detail-post.css"}}" rel="stylesheet"/>

{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}

{{! Everything inside the #post tags pulls data from the page }}
{{#post}}

<div class='container-fluid post-container'>
  <div class='row'>
    <header class="col col-md-12 post-head {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
      <div class='title'>
        <h1>
          {{title}}
        </h1>
      </div>
    </header>
  </div>
</div>
<div class='post-container container'>
  <div class="row post-content-row" role="main">
    <div class='col col-md-12'>
      <article class="{{post_class}}">
          <section class="post-content">
              {{content}}

              <p class='text-center visible-xs-block'>
                _____________________
              </p>
          </section>
      </article>
    </div>
  </div>
</div>


{{/post}}
