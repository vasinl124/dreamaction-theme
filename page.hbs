{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}

{{! Everything inside the #post tags pulls data from the page }}
{{#post}}
<div class='container-fluid post-container'>
<header class="post-head {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
    <div class='title'>
      <h2>
        {{title}}
      </h2>
      <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}"><p><span class='fa fa-calendar'></span> &nbsp&nbsp{{date format="MMMM D, YYYY"}}</p></time>
    </div>
    <div class='tags text-right'>
      <p>{{tags}}</p>
    </div>
</header>

<div class="row post-content" role="main">
  <div class='col col-md-12'>
    <article class="{{post_class}}">
      <div class='col col-md-9'>
        <section class="post-content">
            {{content}}
              
            <p class='text-center visible-xs-block'>
              _____________________
            </p>
            <div id="fb-root"></div>
            <script>(function(d, s, id) {
              var js, fjs = d.getElementsByTagName(s)[0];
              if (d.getElementById(id)) return;
              js = d.createElement(s); js.id = id;
              js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.5&appId=214316472233662";
              fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'facebook-jssdk'));</script>

            <div id="fb-root"></div>
        </section>
      </div>
      
      <div class='col col-md-3'>
        {{> "sidebar"}}
      </div>  
      
    </article>
  </div>      
</div>
</div>
{{/post}}
